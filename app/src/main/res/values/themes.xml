<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeyTheChords" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorFill</item>
        <item name="colorSecondaryVariant">@color/colorFill</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
       <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButtonStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/colorFill </item>
        <item name="android:textColor">@color/colorAccent </item>
        <item name="android:gravity">center </item>

    </style>


</resources>